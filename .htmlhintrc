{
    "tagname-lowercase": true,
    "attr-lowercase": true,
    "attr-value-double-quotes": true,
    "attr-value-not-empty": false,
    "attr-no-duplication": true, // The same attribute can't be specified twice.
    "doctype-first": true,
    "tag-pair": true,
    "tag-self-close": true,
    "spec-char-escape": true, // Special characters must be escaped.
    "id-unique": true,
    "src-not-empty": true,
    "title-require": true, // <title> must be present in <head> tag.

    "head-script-disabled": true,

    "alt-require": true,

    "doctype-html5": true,
    "id-class-value": "dash", // Id and class value must meet some rules: underline, dash, hump.
    "style-disabled": true, // Style tag can not be use.
    "inline-style-disabled": true,
    "inline-script-disabled": false,
    "space-tab-mixed-disabled": "space4", // space, space4, tab, false
    "id-class-ad-disabled": false, // Id and class can not use ad keyword, it will blocked by adblock software.
    "href-abs-or-rel": true, // Href must be absolute or relative.
    "attr-unsafe-chars": true // Attribute value cannot use unsafe chars.
}
